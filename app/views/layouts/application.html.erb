<!DOCTYPE html>
<html>
<head>
  <title>BookStore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <span class="navbar-brand">The Book store</span>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">HOME</span></a></li>
          <li><a href="#">SHOP</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to t("settings.settings"), edit_user_registration_path(current_user) %></li>
            <li><%= link_to t(:orders), '#' %></li>
            <li><%= link_to t("sessions.log_out"), destroy_user_session_path, :method => :delete  %></li>
          <% else %>
            <li><%= link_to t("sessions.log_in"), new_user_session_path %></li>
            <li><%= link_to t("settings.register"), new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 col-md-offset-3">
        <%= render partial: "shared/flash_messages", flash: flash %>
      </div>
      <%= yield %>
    </div>
  </div>
</body>
</html>
