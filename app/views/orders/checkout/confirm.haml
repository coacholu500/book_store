.col-sm-12.col-md-10.col-md-offset-1
  .panel.with-nav-tabs.panel-info
    .panel-heading
      .panel-title
        .row
          .col-xs-2
            %h4
              %b
                = t("current_order.checkout")
          %ul.nav.nav-tabs
            %li= link_to "Address", fill_in_address_checkout_path
            %li= link_to "Delivery", fill_in_delivery_checkout_path
            %li= link_to "Payment", fill_in_payment_checkout_path
            %li.active= link_to "Confirm", confirm_checkout_path
            %li.disabled= link_to "Complete", "#"
    .panel-body
      = form_for @current_order do |f|
        = f.hidden_field :credit_card_id, value: current_user.credit_card.id
        .col-xs-12
          %u
            %h3 Confirm:
          %br
          %address.col-xs-3
            %h4
              %b Billing Address
              = link_to "(edit)", fill_in_address_checkout_path
            = current_user.full_name
            %br
            = @billing_address.address
            %br
            = @billing_address.city
            = @billing_address.zipcode
            %br
            = @billing_address.country.name
            %br
            Phone
            %abbr{title: "Phone"}= @billing_address.phone
          %address.col-xs-3
            %h4
              %b Shipping Address
              = link_to "(edit)", fill_in_address_checkout_path
            = current_user.full_name
            %br
            = @shipping_address.address
            %br
            = @shipping_address.city
            = @shipping_address.zipcode
            %br
            = @shipping_address.country.name
            %br
            Phone
            %abbr{title: "Phone"}= @shipping_address.phone
          .col-xs-3
            %h4
              %b Shipments
              = link_to "(edit)", fill_in_delivery_checkout_path
            = @current_order.delivery.name
          .col-xs-3
            %h4
              %b Payments Information
              = link_to "(edit)", fill_in_payment_checkout_path
            = current_user.credit_card.number
            %br
            #{current_user.credit_card.exp_month}/#{current_user.credit_card.exp_year}
        .col-xs-12
          %table.table.table-hover
            %thead
              %tr
                %th
                  = t("current_order.book")
                %th
                  = t("current_order.quantity")
                %th.text-center
                  = t("current_order.price")
                %th.text-center
                  = t("current_order.total")
                %th
            %tbody
              - @current_order.order_items.each do |order_item|
                %tr
                  %td.col-sm-9.col-md-8
                    .media
                      = image_tag order_item.book.image.thumb.url, class: "media-object thumbnail pull-left", size: "90x120"
                      .media-body
                        %h4.media-heading= link_to order_item.book.title, book_path(order_item.book)
                        %p= order_item.book.description.truncate(200, separator: ' ')
                  %td.col-sm-1.col-md-1{:style => "text-align: center"}
                    = order_item.quantity
                  %td.col-sm-2.col-md-2.text-center
                    %strong
                      $#{order_item.book.price}
                  %td.col-sm-2.col-md-2.text-center
                    %strong
                      $#{order_item.total_price}
                %tr
                  %td
                  %td
                  %td.text-center
                    %h4= t("current_order.subtotal")
                  %td
                    %h4
                      %strong $#{@current_order.real_price}
                %tr
                  %td
                  %td
                  %td.text-center
                    %h4 Shipping:
                  %td
                    %h4
                      %strong
                        $#{@current_order.delivery.price}
                %tr
                  %td
                  %td
                  %td.text-center
                    %h4 Order total:
                  %td
                    %h4
                      %strong
                        $#{@current_order.price_with_delivery}
        .col-xs-3
          = f.button "Plce order", :name => "checkout", value: "confirm", class: "btn btn-primary"
