.col-sm-12.col-md-10.col-md-offset-1
  .panel.with-nav-tabs.panel-info
    .panel-heading
      .panel-title
        .row
          .col-xs-2
            %h4
              %b
                = t("current_order.checkout")
          %ul.nav.nav-tabs
            %li.active= link_to "Address", fill_in_address_checkout_path
            %li.disabled= link_to "Delivery", fill_in_delivery_checkout_path
            %li.disabled= link_to "Payment", fill_in_payment_checkout_path
            %li.disabled= link_to "Confirm", confirm_checkout_path
            %li.disabled= link_to "Complete", "#"
    .panel-body
      .col-xs-4.col-md-offset-1.pull-right
        %u
          %h3 Order Summary
        %b Item total:
        $#{@current_order.real_price}
        %br
        %b Order total:
        $#{@current_order.real_price}
      =form_for current_user, url: checkout_path do |f|
        = devise_error_messages!
        .col-xs-3
          %u
            %h3 Billing address
          = f.fields_for :billing_address, @billing_address do |address_form|
            = render partial: "shared/fields_address", locals: {address_form: address_form}
        .col-xs-3.col-md-offset-1
          %u
            %h3 Shipping address
          = f.fields_for :shipping_address, @shipping_address do |address_form|
            = render partial: "shared/fields_address", locals: {address_form: address_form}
        .col-xs-4.col-md-offset-3
          = f.button "Save and Continue", :name => "checkout", value: "address", class: "btn btn-primary"


